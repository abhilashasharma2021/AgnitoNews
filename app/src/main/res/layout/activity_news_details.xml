<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.NewsDetailsActivity">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:padding="8dp"
            android:src="@drawable/arrow_left" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:text="Agnito"
                android:textColor="@color/purple_500"
                android:textSize="18sp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/tx"
                android:fontFamily="@font/poppinsbold"
                android:text="Today"
                android:textColor="@color/black"
                android:textSize="18sp">


            </com.google.android.material.textview.MaterialTextView>


        </RelativeLayout>

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:padding="6dp"
            android:src="@drawable/notification" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl"
        android:background="@drawable/backgground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/txTittle"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/poppinsbold"
            android:text="PM to take responsibility of his seat in Varanasi."
            android:textColor="@color/black"
            android:textSize="18sp" />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/merriweatherregular"
            android:text="04 April 2022"
            android:textColor="@color/grey_txt"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY"
                android:id="@+id/ivNews"
                android:src="@drawable/dummy" />

            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:padding="8dp"
                android:src="@drawable/share_fill"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/ivSaved"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"
                android:padding="10dp"
                android:src="@drawable/saved"
                app:tint="@color/white" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/ivView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toStartOf="@+id/txView"
                    android:src="@drawable/eye_stroke" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toStartOf="@+id/ivComment"
                    android:fontFamily="@font/merriweatherregular"
                    android:text="200"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/ivComment"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toStartOf="@+id/txComment"
                    android:src="@drawable/comments"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/merriweatherregular"
                    android:text="45"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </RelativeLayout>
        </RelativeLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/merriweatherregular"
            android:text="Author Name |2 Mins"
            android:textColor="@color/grey_txt"
            android:textSize="13sp" />


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/txDescription"
            android:layout_marginTop="10dp"
            android:textAlignment="textStart"
            android:fontFamily="@font/merriweatherregular"
            android:text="Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusa doloremque"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:textAlignment="textStart"
            android:fontFamily="@font/merriweatherregular"
            android:text="beatae vitae dicta sunt explicabo. Nemo enim ipsam voluptatem quia voluptas sit aut odit aut fugit, sed quia consequuntur magni"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:textAlignment="textStart"
            android:fontFamily="@font/merriweatherregular"
            android:text="Ut enim ad minima veniam, quis nostrum exercitationem ullam corporis susquam nihil molestiae consequatur, vel illum qui dolorem eum fugia"
            android:textColor="@color/black"
            android:textSize="14sp" />


    </LinearLayout>
    </ScrollView>
</RelativeLayout>